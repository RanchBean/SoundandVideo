<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".SoundActivity">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundSeekBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:id="@+id/videoButton"
        android:layout_alignTop="@+id/stopButton"
        android:layout_alignRight="@+id/playButton"
        android:layout_alignEnd="@+id/playButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_toLeftOf="@+id/soundSeekBar"
        android:layout_toStartOf="@+id/soundSeekBar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pauseButton"
        android:layout_above="@+id/stopButton"
        android:layout_toRightOf="@+id/soundSeekBar"
        android:layout_toEndOf="@+id/soundSeekBar"
        android:layout_marginBottom="34dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pauseButton"
        android:layout_alignStart="@+id/pauseButton"/>
</RelativeLayout>
